{
  "model": {
    "provider": "anthropic",
    "base_url": "https://api.anthropic.com",
    "model": "claude-sonnet-4-5-20250929",
    "api_key": "$ANTHROPIC_API_KEY"
  },
  "agents": [
    {
      "name": "agent-1",
      "role": "Software Engineer"
    },
    {
      "name": "agent-2",
      "role": "Software Engineer"
    }
  ],
  "coach": {
